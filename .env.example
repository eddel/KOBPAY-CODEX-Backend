# Server
NODE_ENV=development
PORT=4000
API_BASE_URL=http://localhost:4000

# Database (Docker Postgres recommended on Windows)
# For docker-compose, use:
DATABASE_URL=postgresql://kobpay:kobpay_password@localhost:5432/kobpay?schema=public

# JWT Auth
JWT_ACCESS_SECRET=change_me_access_secret
JWT_REFRESH_SECRET=change_me_refresh_secret
JWT_ACCESS_TTL_SECONDS=900
JWT_REFRESH_TTL_SECONDS=2592000

# OTP Provider (Signup via SMS)
# OTP_PROVIDER can be: DEV | BULKSMS
OTP_PROVIDER=DEV
DEV_OTP_FIXED_CODE=123456
OTP_RATE_LIMIT_WINDOW_SECONDS=600
OTP_RATE_LIMIT_MAX_REQUESTS=3

# BulkSMS Nigeria (Sandbox default)
BULKSMS_BASE_URL=https://www.bulksmsnigeria.com/api/sandbox/v2
BULKSMS_API_TOKEN=your_bulksms_token
BULKSMS_SENDER_ID=KOBPAY
BULKSMS_GATEWAY=otp
BULKSMS_FALLBACK_TO_DEV=false

# Flutterwave (Server-side only)
FLW_BASE_URL=https://api.flutterwave.com
FLW_SECRET_KEY=FLWSECK_TEST_xxxxxxxxxxxxxxxxxxxxx
FLW_WEBHOOK_SECRET=flw_webhook_secret_here
FLW_PAYMENT_REDIRECT_URL=
FLW_PAYMENT_OPTIONS=card,banktransfer,ussd

# Flutterwave settings
FLW_CURRENCY=NGN
FLW_COUNTRY=NG

# Paystack (Server-side only)
PAYSTACK_SECRET_KEY=
PAYSTACK_WEBHOOK_SECRET=
PAYSTACK_DEDICATED_PROVIDER=wema-bank

# VTU Africa (Server-side only)
# Sandbox: https://vtuafrica.com.ng/portal/api-test
# Live: https://vtuafrica.com.ng/portal/api
VTU_BASE_URL=https://vtuafrica.com.ng/portal/api
VTU_API_KEY=
VTU_WEBHOOK_URL=
VTU_MODE=live
VTU_VERIFY_URL=https://vtuafrica.com.ng/portal/api/merchant-verify/
VTU_DOCS_BASE_URL=https://vtuafrica.com.ng/api
VTU_CATALOG_CACHE_SECONDS=3600
VTU_HTTP_TIMEOUT_MS=15000
DATA_SUBSCRIPTION_FEE_NGN=50
CABLE_SUBSCRIPTION_FEE_NGN=200

# Reeplay Giftcards (stub if not available)
REEPLAY_GIFTCARD_BASE_URL=https://typescript.reeplay.app/api/v1
REEPLAY_GIFTCARD_API_KEY=reeplay_api_key_here
REEPLAY_EMAIL=your_reeplay_email
REEPLAY_PASSWORD=your_reeplay_password
REEPLAY_LOGIN_PATH=/superadmin/auth/login
REEPLAY_CREATE_CARD_PATH=/superadmin/giftcard/generate/new

# SMTP (for exchange receipt notifications)
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM="KOBPAY <no-reply@kobpay.com>"
ADMIN_RECEIPT_EMAIL=kobpayhq@gmail.com

# Admin (optional)
ADMIN_EMAIL=admin@kobpay.local
ADMIN_PASSWORD=ChangeMe_StrongPassword
ADMIN_API_KEY=change_me_admin_key

# Logging
LOG_LEVEL=debug
